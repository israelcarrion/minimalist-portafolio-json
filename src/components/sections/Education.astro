---
import Section from "@/components/Section.astro"

import {education} from '@cv'
---

<Section title="EducaciÃ³n">
    <ul>
        {
            education.map(({institution, area, studyType, startDate, endDate}) =>{
                const startYear = new Date(startDate).getFullYear()
                const endYear = new Date(endDate).getFullYear()
                const years = `${startYear} - ${endYear}`
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{institution}</h3>
                                    <h4>{area}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{studyType}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    p {
        text-align: justify;
    }

    time {
        color: #555;
        font-size: .85rem;
    }
</style>