---
import Section from "@/components/Section.astro"

import {volunteer} from '@cv'
---

<Section title="Voluntariado">
    <ul>
        {
            volunteer.map(({organization, startDate, endDate, position, summary}) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : 'Actualidad'
                const years = `${startYear} - ${endYear}`
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{organization}</h3>
                                    <h4>{position}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        color: #222;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    p {
        text-align: justify;
    }

    time {
        color: #555;
        font-size: .85rem;
        margin-top: 0.5rem;
    }

    @media (max-width: 500px) {
        header {
            flex-direction: column;
        }

        time {
            margin-top: 0.47rem;
        }
    }
</style>